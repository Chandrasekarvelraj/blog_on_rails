<h1><u>Make Friends:</u></h1>
<div class="articleContent" >
	<ul>
		<% @users.each do |user| %>
		    <% if user.name != current_user.name %>
		      <div id="<%=user.id%>"><li>
			      <h3><%= image_tag user.avatar.url(:thumb), :class => 'img-circle' %>
			      <%= user.name.capitalize %>
			      <%= link_to friendships_path(:friend_id => user), :method => :post, :remote => true do %>
			      	<%= image_tag "add.png", class: 'imgAdd' %></h3>
			      <%end%>
		      </li></div>
		      </br>	
		    <% end %>  
		<% end %>
		<%= link_to "My Friends", { :controller => "friendships", :action => "show", :id => current_user } %> | <%= link_to 'Home', articles_path %>
	</ul>
</div>